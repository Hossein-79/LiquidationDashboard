<section class="lg:w-1/3 mx-auto">
    <h1 class="text-lg font-medium mb-1">Login or Register</h1>
    <p class="text-sm text-neutral-600">
        Please enter your username and password to login to your dashboard or to create a new account.
    </p>
    <h3 class="text-rose-600 text-base font-medium my-3">@ViewBag.Error</h3>

    <form class="mt-3" method="post">
        <label for="username-input" class="text-sm text-neutral-700 dark:text-neutral-400">Username</label>
        <input name="name" id="username-input" class="input" autocomplete="username" required />
        <label for="password-input" class="text-sm text-neutral-700 dark:text-neutral-400">Password</label>
        <input name="password" type="password" id="password-input" class="input" autocapitalize="false" autocomplete="current-password" required />
        <button type="submit" class="btn mt-3">Submit</button>
    </form>
</section>